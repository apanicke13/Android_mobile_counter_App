<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/number_icon"
        app:srcCompat="@drawable/ic_baseline_filter_9_plus_24" />

    <TextView
        android:id="@+id/a_m_t_v_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/place_holder"
        android:textAlignment="center"
        android:textColor="@color/charl_green"
        android:textSize="72sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/main_activity_number_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="2"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="@string/hint"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="@color/charl_green"
            android:textColorHint="@color/charl_green" />

        <Button
            android:id="@+id/button_main_Activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/charl_green"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/bt_text"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/randombt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/charl_green"
        android:text="@string/random_button"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_main_bt_decrement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/ruby"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/decrement_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/act_main_interval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="3"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="@string/hint__"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="@color/charl_green" />

        <Button
            android:id="@+id/act_main_increment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/ruby"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/increment_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_act_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/message_placeholder_summary"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/charl_green"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>